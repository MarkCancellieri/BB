<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <h3 class="text-center">{{pageHeader.title}}</h3>
      {{#each postsList}}
        <div class="row list-group">
          <div class="col-xs-12 list-group-item">
            <div class="col-sm-6 post-title">
              <a href="#">{{postTitle}}</a>
            </div>
            <span class="author">Author: {{postAuthor}}</span>
            <span class="pull-right">Posted: {{postTime}}</span>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
